{
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "allowImportExportEverywhere": true
    },
    "plugins": ["prettier"],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
      "sort-imports": [
        "warn",
        { "ignoreCase": true, "memberSyntaxSortOrder": ["none", "all", "multiple", "single"] }
      ]
    }
  }
  